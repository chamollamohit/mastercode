generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id       String   @id @default(cuid())
  name     String
  email    String   @unique
  role     UserRole @default(USER)
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model User {
  id       String   @id @default(cuid())
  name     String
  email    String   @unique
  role     UserRole @default(USER)
  password String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  problems  Problem[]
}

model Problem {
  id          String     @id @default(cuid())
  title       String
  description String
  difficulty  Difficulty

  tags        String[]
  examples    Json
  constraints Json
  hints       String?
  editorial   String?

  testCases          Json
  codeSnippets       Json
  referenceSolutions Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
